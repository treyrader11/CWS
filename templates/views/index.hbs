{{!< default}} <!-- this is where the layout is rendered-->
<div id="homePage" data-spy="scroll" data-target=".navbar" data-offset="60">
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#CWSNavbar">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#homePage"><img src="" height="76" width="76"></a>
			</div>
			<div class="collapse navbar-collapse" id="CWSNavbar">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#about">ABOUT</a></li>
					<li><a href="#services">SERVICES</a></li>
					<li><a href="#portfolio">PORTFOLIO</a></li>
					<li><a href="#pricing">PRICING</a></li>
					<li><a href="#contact">CONTACT</a></li>
				</ul>
			</div>
		</div>
	</nav>
	{{#ifImage data.pageData.headerBackgroundImage}}
			<div class="jumbotron text-center" style="background-image: url('{{data.pageData.headerBackgroundImage.url}}')""">
				<img src="{{data.pageData.headerImage.url}}" height="200" width="200"><span><h1>{{data.pageData.name}}</h1></span>
				<p href="" class="typewrite" data-period="2000" data-type='[ "{{data.pageData.headerQuoteOne}}", "{{data.pageData.headerQuoteTwo}}", "{{data.pageData.headerQuoteThree}}", "{{data.pageData.headerQuoteFour}}" ]'>
					<span class="wrap"></span>
				</p>
				<form class="">
					<div class="input-group">
						<div class="input-group-btn text-center">
							<button id="getStarted" type="button" class="btn text-center">Get Started</button>
						</div>
					</div>
				</form>
			</div>
		{{else}}
			<div class="jumbotron text-center">
				<h3>To upload a background image for your webpage's header, go to wwww.yourApp/keystone.com</h3>
			</div>
	{{/ifImage}}

<!-- Container (About Section) -->
	<div id="about" class="container-fluid">
		<div class="row">
			<div class="col-sm-8">
				<h2>{{data.pageData.aboutHeader}}</h2><br>
				<h4>{{data.pageData.aboutTopDesc}}</h4><br>
				<p>{{data.pageData.aboutBottomDesc}}</p>
				<br><button class="btn btn-default btn-lg">Get in Touch</button>
			</div>
			<div class="col-sm-4">
				{{#ifImage data.pageData.aboutImage}}
					<img src="{{data.pageData.aboutImage.url}}" height="{{data.pageData.aboutImageHeight}}" width="{{data.pageData.aboutImageWidth}}"/>
				{{else}}
				<span class="{{data.pageData.aboutIcon}} logo slideanim"></span>
				{{/ifImage}}
			</div>
		</div>
	</div>

	<div class="container-fluid bg-grey">
		<div class="row">
			<div class="col-sm-4">
				{{#ifImage data.pageData.ourValuesImage}}
					<img src="{{data.pageData.ourValuesImage.url}}" height="{{data.pageData.ourValuesImageHeight}}" width="{{data.pageData.ourValuesImageWidth}}"/>
				{{else}}
				<span class="{{data.pageData.ourValuesIcon}} logo slideanim"></span>
				{{/ifImage}}
			</div>
			<div class="col-sm-8">
				<h2>{{data.pageData.ourValuesHeader}}</h2><br>
				<h4><strong>MISSION:</strong> {{data.pageData.missionStatement}}</h4><br>
				<p><strong>VISION:</strong> {{data.pageData.visionStatement}}</p>
			</div>
		</div>
	</div>

<!-- Container (Services Section) -->
	<div id="services" class="container-fluid text-center">
		<h2>{{data.pageData.serviceHeader}}</h2>
		<h4>Services</h4>
		<br>
		<div class="row slideanim">
			{{#each data.services}}
				<div class="col-sm-4">
					<span class="{{icon}} logo-small"></span>
					<h4>{{name}}</h4>
					<p>{{desc}}</p>
				</div>
			{{/each}}
		</div>
	</div>

<!-- Container (Portfolio Section) -->
	<div id="portfolio" class="container-fluid text-center bg-grey">
		{{#if data.pageData.portfolioHeader}}
		<h2>{{data.pageData.portfolioHeader}}</h2><br>
		<h4>{{data.pageData.portfolioDesc}}</h4>
		<div class="row text-center slideanim">
			<div class="col-sm-4">
				<div class="thumbnail">
					{{#each data.portfolio}}
					{{#ifImage image}}
						<img src="{{image.url}}" alt="Paris" width="400" height="300">
						<p><strong>{{name}}</strong></p>
						<p>{{desc}}</p>
					{{/ifImage}}
					{{/each}}
				</div>
			</div>
		</div><br>
		{{/if}}
		<h2>{{data.pageData.customerReviewsHeader}}</h2>
		<div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
	<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ol>

	<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox">
				{{#each data.customerReviews}}
				<div class="item active">
					<h4>"{{review}}"<br><span>{{customerName}}</span></h4>
				</div>
				{{/each}}
			</div>

	<!-- Left and right controls -->
			<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>

<!-- Container (Pricing Section) -->
	<div id="pricing" class="container-fluid">
		<div class="text-center">
			<h2>{{data.pageData.pricingHeader}}</h2>
			<h4>{{data.pageData.pricingDesc}}</h4>
		</div>
		<div class="row slideanim">
			<div class="col-sm-4 col-xs-12">
				<div class="panel panel-default text-center">
					<div class="panel-heading">
						<h1>Basic</h1>
					</div>
					<div class="panel-body">
						<p><strong>20</strong> Lorem</p>
						<p><strong>15</strong> Ipsum</p>
						<p><strong>5</strong> Dolor</p>
						<p><strong>2</strong> Sit</p>
						<p><strong>Endless</strong> Amet</p>
					</div>
					<div class="panel-footer">
						<h3>$19</h3>
						<h4>per month</h4>
						<button class="btn btn-lg">Sign Up</button>
					</div>
				</div>
			</div>
			<div class="col-sm-4 col-xs-12">
				<div class="panel panel-default text-center">
					<div class="panel-heading">
						<h1>Pro</h1>
					</div>
					<div class="panel-body">
						<p><strong>50</strong> Lorem</p>
						<p><strong>25</strong> Ipsum</p>
						<p><strong>10</strong> Dolor</p>
						<p><strong>5</strong> Sit</p>
						<p><strong>Endless</strong> Amet</p>
					</div>
					<div class="panel-footer">
						<h3>$29</h3>
						<h4>per month</h4>
						<button class="btn btn-lg">Sign Up</button>
					</div>
				</div>
			</div>
			<div class="col-sm-4 col-xs-12">
				<div class="panel panel-default text-center">
					<div class="panel-heading">
						<h1>Premium</h1>
					</div>
					<div class="panel-body">
						<p><strong>100</strong> Lorem</p>
						<p><strong>50</strong> Ipsum</p>
						<p><strong>25</strong> Dolor</p>
						<p><strong>10</strong> Sit</p>
						<p><strong>Endless</strong> Amet</p>
					</div>
					<div class="panel-footer">
						<h3>$49</h3>
						<h4>per month</h4>
						<button class="btn btn-lg">Sign Up</button>
					</div>
				</div>
			</div>
		</div>
	</div>

<!-- Container (Contact Section) -->
	<div id="contact" class="container-fluid bg-grey">
		<h2 class="text-center">{{data.pageData.contactHeader}}</h2>
		<div class="row">
			<div class="col-sm-5">
				<p>{{data.pageData.contactInfo.desc}}</p>
				<p><span class="glyphicon glyphicon-map-marker"></span> {{data.pageData.contactInfo.city}}</p>
				<p><span class="glyphicon glyphicon-phone"></span> {{data.pageData.contactInfo.number}}</p>
				<p><span class="glyphicon glyphicon-envelope"></span> {{data.pageData.contactInfo.email}}</p>
			</div>
			<div class="col-sm-7 slideanim">
				<div class="row">
					<div class="col-sm-6 form-group">
						<input class="form-control" id="name" name="name" placeholder="Name" type="text" required>
					</div>
					<div class="col-sm-6 form-group">
						<input class="form-control" id="email" name="email" placeholder="Email" type="email" required>
					</div>
				</div>
				<textarea class="form-control" id="comments" name="comments" placeholder="Comment" rows="5"></textarea><br>
				<div class="row">
					<div class="col-sm-12 form-group">
						<button class="btn btn-default pull-right" type="submit">Send</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
